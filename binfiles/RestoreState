#!/bin/sh

# Restore the owner and attributes of the files listed
# in the file specified by $1.  That file is expected
# to have been generated by the SaveState script.

# Execute this script under the Z shell
[ ! -n "$ZSH_VERSION" ] && exec zsh "$0" ${1+"$@"}

cmdname="${0:t}"

while read mode uid gid filename   
do
  chown $uid:$gid $filename
  chmod $mode $filename
done < $1

