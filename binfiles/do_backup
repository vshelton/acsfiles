#!/usr/bin/env zsh

# Run borg backup.

: {USRLOCAL:=/opt}
: {SRCROOT:=$USRLOCAL/src}
: {ZIPROOT:=$USRLOCAL/zip}

cmd=( borg create )
opts=( --stats --progress --compression auto,zstd --exclude-caches
[[ -z $repo ]] && repo=/SSD-2/backups/borg

# Key is directory to back up and value is archive name.
typeset -A dirs=(
  $SRCROOT 	src
  $ZIPROOT 	zip
  $HOME    	acs
  /SSD-2/Music	Music
)

for d in ${(k)dirs}; do
  ${cmd} ${opts} $@ ${repo}::${dirs[$d]}-$(today) $d
done

# Local Variables:
# mode: shell-script
# sh-indentation: 2
# indent-tabs-mode: nil
# End:
