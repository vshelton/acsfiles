#!/bin/bash

# Script to start up an i3 session.

: ${USRLOCAL:=/opt}
PATH=$HOME/bin:$USRLOCAL/bin:$PATH

compton -b

my_conky

i3-sensible-terminal --title=zsh &

# clementine &
emacs -f about-emacs &

# The browser is passed as the first parameter
$1 &

