#!/usr/bin/env zsh

: ${USRLOCAL:=/usr/local}
: ${BLDROOT:=$USRLOCAL/build}

pkgname=perl
scm_opts=
if [[ $# == 0 ]]; then
  set $pkgname
  scm_opts=--update
fi

cd $(SRCROOT=$BLDROOT GetSource --src=$BLDROOT $scm_opts "$1")
./Configure -Dprefix=$USRLOCAL -Dusedevel -des

make
make test

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# sh-indentation: 2
# indent-tabs-mode: nil
# End:
