# Print a list of things to stdout.
join="and"
[[ $1 == "and" || $1 == "or" ]] && join=$1 && shift

(( $# == 0 )) && return 1
(( $# == 1 )) && print -n "$1" && return 0

while (( $# > 1 ))
do
  print -n "$1"
  shift
  (( $# > 1 )) && print -n ", "
done

print -n " $join $1"

