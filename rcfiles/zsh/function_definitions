# Define utility shell functions for all shells.

setopt extendedglob
f=$ZDOTDIR/lib/zsh-functions
[[ -d $f ]] || f=$HOME/lib/zsh-functions
if [[ -d $f ]]; then
  fpath=($f $fpath)
  autoload $(print $f/*~*~(:t))
fi

