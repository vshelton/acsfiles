set -x
mkdir src
echo 'bin_PROGRAMS = hello
hello_SOURCES = main.c' >src/Makefile.am
echo '#include "config.h"
#include <stdio.h>

int
main (void)
{
  printf ("Hello World!");
  printf (" This is " PACKAGE_STRING ".\\n");
  return 0;
}' > src/main.c
echo 'SUBDIRS = src' > Makefile.am
autoscan
perl -p -e 's/FULL-PACKAGE-NAME/hello/;' \
-e 's/VERSION/1.0/;' \
-e 's/BUG-REPORT-ADDRESS/ethersoft\@gmail.com/;' \
-e 's/# Checks for programs./AM_INIT_AUTOMAKE([foreign -Wall -Werror])

# Checks for programs./;' <configure.scan >configure.ac
autoreconf --install
./configure
make
#src/hello
